    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "remoteWorkspaceRoot": "${workspaceRoot}"
        },
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "pathToRDebugIDE": "/Users/greatokonkwo/.rvm/gems/ruby-2.6.3/bin/rdebug-ide",
            "showDebuggerOutput": true,
            "args": [
                "server", 
                "-b", "0.0.0.0"
            ]
        }
    ]
}